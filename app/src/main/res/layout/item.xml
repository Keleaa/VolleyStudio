    <TextView
        android:id="@+id/textView_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="111"
        android:textSize="24sp" />
</LinearLayout>